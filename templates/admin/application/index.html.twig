{% extends 'base.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
    {% include 'components/navigation.html.twig' %}
    <div class="container-fluid mt-3">
        <div class="row mb-3">
            <div class="col-12">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th class="d-none d-sm-table-cell">UUID</th>
                        <th class="d-none d-sm-table-cell">Endpoint</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for application in pager.currentPageResults %}
                        <tr>
                            <td>
                                <a href="{{ path('application_show', {'uuid': application.uuid}) }}">
                                    {{ application.name }}
                                </a>
                            </td>
                            <td class="d-none d-sm-table-cell">{{ application.uuid }}</td>
                            <td class="d-none d-sm-table-cell">
                                {{ url('application', {uuid: application.uuid}) }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="text-center" colspan="4">
                                no records found
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {% include 'components/pager.html.twig' with {pager: pager} only %}
            </div>
        </div>
    </div>
{% endblock %}
